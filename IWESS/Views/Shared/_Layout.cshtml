    <![endif]-->

</head>
<body>
    <div id="wrapper">
        <!-- Navigation -->
        <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-ex1-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a href="@Url.Action("Dashboard", "Operation")"><img class="img-responsive" src="~/Images/logo.png" alt="@ConfigurationManager.AppSettings["LicenseeShortCompanyName"] Logo" style="width: 100px; height: 40px;"></a>
            </div>
            <!-- Top Menu Items -->
            <ul class="nav navbar-left top-nav hidden-sm hidden-xs" style="margin-left: 140px; margin-bottom: 0; padding-top: 8px; box-sizing: content-box;">
                <li class="lead" style="color: #fff; margin-bottom: 0;">@ConfigurationManager.AppSettings["LicenseeShortCompanyName"] Employee Self Service</li>
            </ul>
           
            <ul class="nav navbar-right top-nav">
                @*<li>
                        <a href="#">@Session["FullName"]</a>
                    </li>*@
                <li class="pull-right">
                    <a href="@Url.Action("LogOut", "Operation")" id="LogOut"><i class="fa fa-fw fa-power-off"></i> Log Out</a>
                </li>
            </ul>
            <!-- Sidebar Menu Items - These collapse to the responsive navigation menu on small screens -->
            <div class="collapse navbar-collapse navbar-ex1-collapse">
                <ul class="nav navbar-nav side-nav">
                    <li>@Html.ActionLink("Home", "Dashboard", "Operation")</li>
                    <li>@Html.ActionLink("Employee", "EmployeeInfo", "Operation")</li>
                    <li>@Html.ActionLink("Additional", "Addition", "Operation")</li>
                    <li>@Html.ActionLink("Job History", "JobInfo", "Operation")</li>
                    <li class="dropdown">
                        <a href="javascript:;" class="dropdown-toggle" data-toggle="collapse" data-target="#demo1">Pay Information <b class="caret"></b></a>
                        <ul class="collapse in" id="demo1">
                            <li>@Html.ActionLink("Bank Details", "BankInfo", "Operation")</li>
                            <li>@Html.ActionLink("Salary Summary", "PayStubList", "Operation")</li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a href="javascript:;" class="dropdown-toggle" data-toggle="collapse" data-target="#demo2">TIme Off <b class="caret"></b></a>
                        <ul class="collapse in" id="demo2">
                            <li><a href="@Url.Action("MyRequests", "Operation")">Request</a></li>
                            <li><a href="@Url.Action("History", "Operation")">History</a></li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a href="javascript:;" class="dropdown-toggle" data-toggle="collapse" data-target="#demo">Others <b class="caret"></b></a>
                        <ul class="collapse in" id="demo">
                            <li>@Html.ActionLink("Qualification", "Qualify", "Operation")</li>
                            <li>@Html.ActionLink("Committments", "ViewCommittments", "Operation")</li>
                            <li>@Html.ActionLink("View Survey", "ViewSurvey", "Operation")</li>
                            <li>@Html.ActionLink("View Appraisals", "ViewAppraisals", "Operation")</li>
                        </ul>
                    </li>
                </ul>


            </div>
        </nav>
        @RenderBody()


        <footer class="footer" style="margin-top: 45px;">
            <div class="">
                <p class="text-center">Copyright&copy; @DateTime.Now.Year Powered by<a href="http://www.infowarelimited.com" target="_blank">  InfoWARE Limited </a></p>
            </div>
