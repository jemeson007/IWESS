                            <div>
                                <div class="col-md-3 col-sm-10 col-xs-12" style="position:fixed;
                bottom: -30px;
                right: 0;">
                                    <div class="panel panel-primary">
                                        <div class="panel-heading" id="accordion">
                                            <span class="fa fa-comment-o" aria-hidden="true"></span> Chat with Us
                                            <div class="btn-group pull-right">
                                                <a class="btn btn-default btn-xs" data-toggle="collapse" data-target="#collapseOne">
                                                    <span class="fa fa-caret-down" aria-hidden="true"></span>
                                                </a>
                                            </div>
                                        </div>
                                        <iframe class="panel-collapse collapse" id="collapseOne" src="http://svcs.infowarelimited.com/IWChatWebClient" style="width:308px" height="320px"></iframe>
                                    </div>

                                </div>
                            </div>
                        </div>*@

        </footer>
    </div>
    @RenderSection("scripts", required: false)
    <script src="~/Scripts/jquery-1.10.2.js"></script>
    <!-- Bootstrap Core JavaScript -->
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/jquery.dataTables.min.js"></script>
    @*<script src="~/Scripts/dataTables.tableTools.min.js"></script>
        <script src="~/Scripts/dataTables.bootstrap.min.js"></script>
        <script src="~/Scripts/dataTables.buttons.min.js"></script>*@
    <script type="text/javascript">
        $(document).ready(function () {
            $('#paystub').DataTable({
                "pagingType": "simple_numbers",
                "lengthMenu": [[10, 25, 50, -1], [10, 25, 50, "All"]],
                "lengthChange": false,
                "dom": 'T<"clear">Bfrtip',
                "ordering": false
            });

            $('#paystub').DataTable().search('').draw();

        })
    </script>


</body>
</html>
