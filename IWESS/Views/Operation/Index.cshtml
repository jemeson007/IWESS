@model IWESS.ViewModel.VMLogin
@{ 
    Layout = "~/Views/Shared/_Login.cshtml";
}
<div class="row">
    <div class="col-lg-12">
        <div class="bootstrap-admin-login-form">
            <div style="width:100%" align="center">
                <img src="~/Images/logo.png" style="width:50%; height:80%" />
            </div>
            <br />
            <div class="alert alert-info" align="center">
                <b>Employee Self-Service Portal</b>
            </div>
            @if (ViewBag.Status != null)
            {
                <div class="alert alert-danger">
                    @Html.Label("Status", ViewBag.Status as string,
                     new { @align = "center" })
                </div>
            }
            @using (Html.BeginForm("Index", "Operation", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                <div class="form-group">
                    Username :
                    @Html.TextBox("Username", null, new { @class = "form-control", @placeholder = "Username" })
                    @Html.ValidationMessageFor(m=>m.Username)
                </div>
                <div class="form-group">
                    Password :
                    @Html.Password("Password", null, new { @class = "form-control", @placeholder = "Password" })
                    @Html.ValidationMessageFor(m=>m.Password)
                </div>
                <input class="btn btn-lg btn-primary" type="submit" value="Login" id="Login">
            }
            <br />
          
        </div>
    </div>
</div>