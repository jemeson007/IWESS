
@{
    ViewBag.Title = "Employee Info";
}
    <div id="page-wrapper">
        <div class="container-fluid">
           
            <!-- /.row -->
            <div class="col-lg-12">
                <div class="row">
                    <div class="page-header">
                        <h3>Employee Information</h3>
                    </div>
                    <div class="table-responsive">
                        <table class="table table-bordered table-striped">
                            <thead>
                                <tr class="bg-primary">
                                    <th>Items</th>
                                    <th>Details</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var row in (ViewData["Info"] as IEnumerable<IWESS.Models.CEmployeeInfo>))
                                {
                                    <tr>
                                        <th scope="row">Name</th>
                                        <td>@row.Name</td>
                                    </tr>
                                    <tr>
                                        <th scope="row">Title</th>
                                        <td>@row.Title</td>
                                    </tr>
                                    <tr>
                                        <th scope="row">Gender</th>
                                        @if (row.Gender.Equals("1"))
                                        {
                                            <td>Male</td>
                                        }
                                        @if (row.Gender.Equals("2"))
                                        {
                                            <td>Female</td>
                                        }

                                    </tr>
                                    <tr>
                                        <th scope="row">City</th>
                                        <td>@row.City</td>
                                    </tr>
                                    <tr>
                                        <th scope="row">State</th>
                                        <td>@row.State</td>
                                    </tr>
                                    <tr>
                                        <th scope="row">Country</th>
                                        <td>@row.Country</td>
                                    </tr>
                                    <tr>
                                        <th scope="row">Email</th>
                                        <td>@row.Email</td>
                                    </tr>
                                    <tr>
                                        <th scope="row">Phone Number</th>
                                        <td>@row.Phone</td>
                                    </tr>
                                    <tr>
                                        <th scope="row">Nationality</th>
                                        <td>@row.Nationality</td>
                                    </tr>
                                    <tr>
                                        <th scope="row">Birthday</th>
                                        <td>@row.Birthday</td>
                                    </tr>

                                }
                            </tbody>
                        </table>
                    </div>

